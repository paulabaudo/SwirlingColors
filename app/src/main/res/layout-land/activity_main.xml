<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_tips"
        android:id="@+id/textView"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/edit_check_amount"
        android:hint="@string/edit_text_amount_hint"
        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        android:layout_gravity="center_horizontal" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radio_no_tip"
        android:background="@color/beautiful_background">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_15_pct_text"
            android:id="@+id/radio_15_pct" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_20_pct_text"
            android:id="@+id/radio_20_pct" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_no_tip_text"
            android:id="@id/radio_no_tip" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_calculate_tip"
            android:id="@+id/button_calculate"
            android:layout_gravity="bottom|right" />
    </FrameLayout>

</LinearLayout>
